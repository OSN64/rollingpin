{{> head}}
<div class="main">
    <h1 id="main-title">Order</h1>
    <div class="steps">
        <div class="panel panel-default">
            <table class="table">
                <thead>
                    <tr>
                        {{!-- <th>#</th> --}}
                        <th>Item name</th>
                        <th>Quantity</th>
                        <th>Cost</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each order}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{quantity}}</td>
                        <td>$ {{price}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <h3>Total price: $ {{totalCost}} </h3>
    </div>
</div> <!-- /.main -->

<script type="text/javascript" src="/js/newOrder.js"></script>
{{> tail}}
