{{> head}}
<!-- Default home page -->
<div class="top-bar">
    <div class="container clearfix">
        <img class="logo" src="http://sailsjs.org/images/sails-logo.jpg" />
    </div>
</div>

<div class="container clearfix">
    <div class="main">
        <h1 id="main-title"></h1>
        <div class="steps">
            <h2>Order</h2>
            <button>Submit order</button>
            <ul id="orderList">
                <li><p>item name</p><p>quantity</p><p>$100</p> <button>X</button></li>
                {{!-- these list items are supposed to be on a line --}}
                <hr>
                <li><p>item name</p><p>quantity</p><p>$100</p> <button>X</button></li>
            </ul>
        </div>
    </div>

    {{!-- zxz this is where the page gets split into 2 --}}
    <div class="side-bar">
        <form id="addItem" accept-charset="utf-8">
            <input type="hidden" name="orderId" value="{{order.id}}" required>
            <label>Item: </label>
            <input type="number" name="menuItemId" placeholder="#" required>
            <label>Quantity:</label>
            <input type="number" name="quantity" placeholder="3" required>
            <input type="submit" name="submit" value="add" >
        </form>

        {{#if menuItems}}        
        <div class="panel panel-default">
            <div class="panel-heading"><h4>Menu Items</h4></div>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each menuItems}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>$ {{price}}</td>
                        <td>{{description}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <h3>No Menu Items</h3>
        {{/if}}

    </div>
</div>
<script type="text/javascript" src="/js/order.js"></script>
{{> tail}}
