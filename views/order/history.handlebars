{{> head}}
<div class="main">
<h1>Order History</h1>
{{#if orders}}

    <div class="steps">  
        <div class="panel panel-default">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Method</th>
                        <th>Delivery Address</th>
                        <th>Created At</th>
                        <th>Order price</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                     {{!-- <a href="/order/1" title="asd">asa</a> --}}
                     {{!-- id = 1 --}}
                    {{!-- for each row add a link or button to each order --}}
                        <td>{{id}}</td>
                        <td>{{method}}</td>
                        <td>{{deliveryAddr}}</td>
                        <td>{{createdAt}}</td>
                        <td>$ {{priceSum}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
            <h3>Total orders price: $ {{totalPrice}} </h3>
        
    </div>
{{else}}

<h3>No Orders</h3>

{{/if}}

</div> <!-- /.main -->

<script type="text/javascript" src="/js/newOrder.js"></script>
{{> tail}}
