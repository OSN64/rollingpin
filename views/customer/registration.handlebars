{{> head}}
<div class="main">
    <h1 id="main-title">Employee Registration</h1>
    
        {{#if flash.err}}
        <ul class="alert alert-danger">
            {{#listerr flash.err}}
                is {{rule}}
            {{/listerr}}
        </ul><hr>
        {{/if}}
        
        <div class="steps">
            <form action="/customer/create" method="post" accept-charset="utf-8">
                
                <div class="input-group">
                    <span class="input-group-addon">First Name</span>
                    <input type="text" name="nameFirst" class="form-control">
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Last Name</span>
                    <input type="text" name="nameLast" class="form-control">
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Phone Number</span>
                    <input type="text" name="phoneNo" class="form-control">
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Address</span>
                    <input type="text" name="addr" class="form-control">
                </div>
                
                <hr>
                
                <div class="input-group">
                    <span class="input-group-addon">Card Number</span>
                    <input type="text" name="cCardNo" class="form-control">
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Expiry Date</span>
                        <input type="text" name="cCardExpMon" class="form-control" placeholder="Month">
                        <input type="text" name="cCardExpYear" class="form-control" placeholder="Year"> <!-- zxz Make these 2 inputs inline (side-by-side) -->
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Card Holder Name</span>
                    <input type="text" name="cCardName" class="form-control">
                </div>
                
                <button type="submit" class="btn btn-default btn-lg btn-success">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Create Customer
                </button>
            </form>

        </div>

    </div>
{{> tail}}