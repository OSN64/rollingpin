{{> head}}
<!-- Default home page -->
<div class="top-bar">
    <div class="container clearfix">
        <img class="logo" src="http://sailsjs.org/images/sails-logo.jpg" />
    </div>
</div>

<div class="container clearfix">
    <div class="main">
        <h1 id="main-title"></h1>
            {{#if flash.err}}
            <ul class="alert alert-warning">
                {{#listerr flash.err}}
                    is {{rule}}
                {{/listerr}}
            </ul>
            {{/if}}
            <hr>
            <div class="steps">
                <form action="/customer/create" method="post" accept-charset="utf-8">
                    <label>First name</label>  
                    <input type="text" name="nameFirst">                  
                    <label>Last name</label>  
                    <input type="text" name="nameLast">
                    <label>Phone Number</label>     
                    <input type="text" name="phoneNo">               
                    <label>Credit Card Number</label>  
                    <input type="number" name="cCardNo"> 
                    <label>Credit Card Expiry</label>  
                    <input type="number" name="cCardExpMon" placeholder="mm">/
                    <input type="number" name="cCardExpYear" placeholder="yy">
                    <label>Credit Card name</label>     
                    <input type="text" name="cCardName">
                    <label>Address</label>   
                    <input type="text" name="addr">
                    <input type="submit" name="submit" value="Register Customer">
                </form>

            </div>

        </div>
        <div class="side-bar">
            <h4 id="new">
                New to Sails?
            </h4>
            <ul>
                <li>
                    <a href="http://sailsjs.org">Visit sailsjs.org</a>
                </li>
                <li>
                    <a href="http://sailsjs.org/#!documentation">Documentation</a>
                </li>
            </ul>
            <h4>
                Next Steps
            </h4>
            <ul>
                <li class="sprite single_page">
                    <a target="_blank" href="http://sailsjs.org">Build a single page app</a>
                </li>
                <li class="sprite traditional">
                    <a target="_blank" href="http://sailsjs.org">Build a traditional webapp</a>
                </li>
                <li class="sprite realtime">
                    <a target="_blank" href="http://sailsjs.org">Build a realtime app</a>
                </li>
                <li class="sprite api">
                    <a target="_blank" href="http://sailsjs.org">Build an API</a>
                </li>
            </ul>
        </div>
    </div>
    {{> tail}}