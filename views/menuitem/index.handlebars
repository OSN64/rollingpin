{{> head}}
<h1>Manage Menu Items</h1>

<form action="/menuitem/create" method="post" accept-charset="utf-8">
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group">
                <span class="input-group-addon">Name</span>
                <input type="text" class="form-control" name="name" placeholder="chicken" required>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="input-group">
                <span class="input-group-addon">Price</span>
                <input type="number" class="form-control" name="price" placeholder="sale price of this item" min="1" required>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="input-group">
                <span class="input-group-addon">Description</span>
                <input type="text" class="form-control" name="description" placeholder="short description of this menu item" required>
            </div>
        </div>
        
        <div class="col-lg-2">
            <button type="submit" class="btn btn-default btn btn-info del">
                <span class="glyphicon glyphicon-plus"></span> Add
            </button>
        </div>
    </div><!-- /.row -->
</form>

{{#if menuItems}}        
<div id="menuList" class="panel panel-default">
    <div class="panel-heading"><h4>Menu Items</h4></div>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {{#each menuItems}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>$ {{price}}</td>
                <td>{{description}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<h3>No Menu Items</h3>
{{/if}}

{{> tail}}