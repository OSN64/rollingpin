{{> head}}
<form action="/menuitem/create" method="post" accept-charset="utf-8">
<label>Name:</label>
    <input type="text" name="name" placeholder="chicken" required>
    <label>Price: $</label>
    <input type="number" name="price" placeholder="$" min="1" required>
    <label>Description:</label>
    <input type="text" name="description" placeholder="sadsad">
    <button type="submit" class="btn btn-default btn-sm btn-info">
        <span class="glyphicon glyphicon-plus"></span> Add
    </button>
</form>

{{#if menuItems}}        
<div id="menuList" class="panel panel-default">
    <div class="panel-heading"><h4>Menu Items</h4></div>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {{#each menuItems}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>$ {{price}}</td>
                <td>{{description}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<h3>No Menu Items</h3>
{{/if}}


{{> tail}}