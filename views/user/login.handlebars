{{> head}}
<h1 id="main-title">Employee Login</h1>
{{#if flash.err}}
<ul class="alert alert-warning">
    {{#listerr flash.err}}
        {{data}}
    {{/listerr}}
</ul>
{{/if}}

<p>Enter your employee email address and password to login to the order system.</p>

<form action="/login" method="post" accept-charset="utf-8">
    <div class="input-group">
        <span class="input-group-addon">Email</span>
        <input type="email" name="email" class="form-control" required>
    </div>
    <div class="input-group">
        <span class="input-group-addon">Password</span>
        <input type="password" name="password" class="form-control" required>
    </div>
    
    <button type="submit" class="btn btn-default btn-lg btn-success">
        <span class="glyphicon glyphicon-lock"></span> Login
    </button>
    <a href="/register" class="btn btn-default btn-lg btn-info">
        <span class="glyphicon glyphicon-lock"></span> Register
    </a>
    
</form>
{{> tail}}